<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_product_form_sama" model="ir.ui.view">
            <field name="name">product.template.product.form.sama</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="sama_brand_id" string="Brand" options="{'no_create': True, 'no_open': True}"/>
                    <field name="sama_category_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="sama_subcategory_id" options="{'no_create': True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>